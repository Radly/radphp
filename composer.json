{
    "name": "radphp/radphp",
    "description": "RadPHP is an experimental RESTful framework",
    "keywords": ["RadPHP", "RESTful", "framework"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammad Abdoli Rad",
            "email": "m.abdolirad@gmail.com",
            "role": "Project Founder"
        },
        {
            "name": "Omid Mottaghi Rad",
            "email": "omidmr@gmail.com",
            "role": "Project Founder"
        }
    ],
    "minimum-stability": "dev",
    "require-dev": {
        "phpunit/phpunit": "~5.1",
        "phing/phing": "^2.12.0"
    },
    "require": {
        "php": ">=5.6",
        "league/climate": "3.1.*",
        "radphp/composer-installer": "dev-master",
        "psr/log": "1.0",
        "psr/http-message": "~1.0",
        "ext-mcrypt" : "*"
    },
    "replace": {
        "radphp/authentication": "self.version",
        "radphp/authorization": "self.version",
        "radphp/configure": "self.version",
        "radphp/core": "self.version",
        "radphp/cryptography": "self.version",
        "radphp/database": "self.version",
        "radphp/dependency-injection": "self.version",
        "radphp/error": "self.version",
        "radphp/events": "self.version",
        "radphp/logging": "self.version",
        "radphp/network": "self.version",
        "radphp/o-authentication": "self.version",
        "radphp/routing": "self.version",
        "radphp/utility": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Rad\\": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
